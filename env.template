# Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Mailchimp Newsletter (Optional)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_mailchimp_list_id_here
MAILCHIMP_SERVER_PREFIX=us21

# Database (if implementing user accounts)
DATABASE_URL=your_database_connection_string_here

# Authentication (if implementing user accounts)
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=https://yourdomain.com

# Google Analytics (Optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here

# Contact Form (Optional - for email notifications)
SMTP_HOST=your_smtp_host_here
SMTP_PORT=587
SMTP_USER=your_smtp_username_here
SMTP_PASS=your_smtp_password_here
CONTACT_EMAIL=contact@yourdomain.com

