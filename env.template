# Environment Variables Template
# Copy this file to .env.local and fill in your actual values

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Vercel Analytics (automatically configured)
# No additional configuration needed

# Stripe (for future payment processing)
STRIPE_SECRET_KEY=sk_test_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# Email Service (for newsletter and contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Mailchimp (for newsletter)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id
MAILCHIMP_SERVER_PREFIX=usX

# Database (for future features)
DATABASE_URL=your-database-url

# Authentication (for future user accounts)
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Monitoring and Analytics
NEXT_PUBLIC_MONITORING_ENABLED=true
NEXT_PUBLIC_ERROR_TRACKING_ENABLED=true
NEXT_PUBLIC_PERFORMANCE_MONITORING_ENABLED=true

