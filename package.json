{
  "name": "adam-halls-garden-center",
  "version": "0.1.0",
  "description": "Adam Halls Garden Center - Your Local Plant Nursery",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "format": "prettier --write .",
    "prepare": "husky install",
    "pwa:build": "next build && next export",
    "pwa:start": "next start",
    "mobile:init": "npx cap init",
    "mobile:add:ios": "npx cap add ios",
    "mobile:add:android": "npx cap add android",
    "mobile:sync": "npx cap sync",
    "mobile:open:ios": "npx cap open ios",
    "mobile:open:android": "npx cap open android",
    "mobile:build:ios": "npm run pwa:build && npx cap sync ios && npx cap open ios",
    "mobile:build:android": "npm run pwa:build && npx cap sync android && npx cap open android",
    "mobile:run:ios": "npx cap run ios",
    "mobile:run:android": "npx cap run android",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-builder --dir",
    "electron:dist": "npm run build && electron-builder --publish=never",
    "build:all": "bash scripts/build-all.sh",
    "build:all:win": "scripts\\build-all.bat",
    "build:web": "npm run build && npm run pwa:build",
    "build:desktop": "npm run build && npm run electron:dist",
    "build:mobile": "npm run pwa:build && npx cap sync",
    "deploy:web": "npm run build:web && echo 'Web build ready in out/ directory'",
    "deploy:desktop": "npm run build:desktop && echo 'Desktop build ready in dist/ directory'",
    "deploy:mobile": "npm run build:mobile && echo 'Mobile projects ready in ios/ and android/ directories'",
    "clean": "rm -rf .next out dist ios android",
    "clean:win": "if exist .next rmdir /s /q .next && if exist out rmdir /s /q out && if exist dist rmdir /s /q dist && if exist ios rmdir /s /q ios && if exist android rmdir /s /q android"
  },
  "author": "Adam Halls Plant Nursery",
  "license": "ISC",
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@reduxjs/toolkit": "^2.2.1",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.3.1",
    "@vercel/analytics": "^1.5.0",
    "@vercel/speed-insights": "^1.2.0",
    "clover-ecomm-sdk": "^1.0.0",
    "clover-rest-api": "^0.0.4",
    "express": "^5.1.0",
    "next": "14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.1.0",
    "react-slick": "^0.30.1",
    "slick-carousel": "^1.8.1",
    "stripe": "^18.2.1",
    "swiper": "^11.0.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.0.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.adamhalls.gardencenter",
    "productName": "Adam Halls Garden Center",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "zip",
        "dir"
      ],
      "icon": "assets/icons/icon.ico"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
