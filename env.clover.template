# Clover Payment Processing Configuration
# Copy this file to .env.local and fill in your actual Clover credentials

# Clover App ID (from your Clover Developer Dashboard)
CLOVER_APP_ID=your_clover_app_id_here

# Clover App Secret (from your Clover Developer Dashboard)
CLOVER_APP_SECRET=your_clover_app_secret_here

# Clover Environment (sandbox or production)
CLOVER_ENVIRONMENT=sandbox

# Clover Merchant ID (from your Clover account)
CLOVER_MERCHANT_ID=your_clover_merchant_id_here

